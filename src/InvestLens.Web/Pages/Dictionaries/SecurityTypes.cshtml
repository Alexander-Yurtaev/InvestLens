@page
@model InvestLens.Web.Pages.Dictionaries.SecurityTypesModel
@{
    Layout = "Shared/_DictionaryLayout";
    ViewData["Title"] = "Справочник доступных Типов ценных бумаг";
    ViewData["PageTitle"] = "Типы ценных бумаг (SecurityTypes)";
}

@section TableHeaders {
    <th>
        <a href="@Model.GetSortUrl("SecurityTypeName")" class="text-white text-decoration-none">
            Название
            @if (Model.GetSortClass("SecurityTypeName") == "sort-asc")
            {
                <i class="fas fa-sort-up"></i>
            }
            else if (Model.GetSortClass("SecurityTypeName") == "sort-desc")
            {
                <i class="fas fa-sort-down"></i>
            }
            else
            {
                <i class="fas fa-sort"></i>
            }
        </a>
    </th>
    <th>
        <a href="@Model.GetSortUrl("SecurityTypeTitle")" class="text-white text-decoration-none">
            Краткое название
            @if (Model.GetSortClass("SecurityTypeTitle") == "sort-asc")
            {
                <i class="fas fa-sort-up"></i>
            }
            else if (Model.GetSortClass("SecurityTypeTitle") == "sort-desc")
            {
                <i class="fas fa-sort-down"></i>
            }
            else
            {
                <i class="fas fa-sort"></i>
            }
        </a>
    </th>
    <th>Действия</th>
}

@section TableRows {
    @foreach (var item in Model.Entities)
    {
        <tr>
            <td><strong>@item.SecurityTypeName</strong></td>
            <td>@item.SecurityTypeTitle</td>
            <td>
                <button class="btn btn-sm btn-outline-primary"
                        onclick="showDetails('@item.Id')">
                    Подробнее
                </button>
            </td>
        </tr>
    }
}
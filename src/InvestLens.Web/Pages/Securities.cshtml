@page
@model InvestLens.Web.Pages.SecuritiesModel
@{
    ViewData["Title"] = "Список ценныз бумаг";
}

<div class="container mt-4">
    <h2>Финансовые инструменты</h2>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Код</th>
                    <th>Краткое название</th>
                    <th>Полное название</th>
                    <th>Тип</th>
                    <th>Группа</th>
                    <th>Торгуется</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Securities)
                {
                    <tr>
                        <td><strong>@(item.SecId)</strong></td>
                        <td>@(item.ShortName)</td>
                        <td>@item.Name</td>
                        <td>
                            <span class="badge bg-info">@item.Type</span>
                        </td>
                        <td>@item.Group</td>
                        <td>
                            @if (item.IsTraded)
                            {
                                <span class="badge bg-success">Да</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Нет</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" 
                                    onclick="showDetails('@(item.Id)')">
                                Подробнее
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table th {
        background-color: #343a40;
        color: white;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }
</style>

<script>
function showDetails(id) {
    // Реализация просмотра деталей
    alert('Детали для ID: ' + id);
}
</script>